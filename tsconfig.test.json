{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "rootDir": "tests",
    "outDir": "dist-tests",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types"],
    "paths": {
      "@modelcontextprotocol/sdk/server.js": [
        "types/modelcontextprotocol__sdk/server.d.ts"
      ],
      "@modelcontextprotocol/sdk/transports/stdio.js": [
        "types/modelcontextprotocol__sdk/transports/stdio.d.ts"
      ]
    }
  },
  "include": ["tests/**/*.ts"]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "rootDir": "tests",
    "outDir": "dist-tests",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types"],
    "paths": {
      "@modelcontextprotocol/sdk/*": ["types/modelcontextprotocol__sdk/*"]
    }
  },
  "include": ["tests/**/*.ts"]
}
